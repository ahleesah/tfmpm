<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>

	<div class="form-group">
		<%= f.label :first_name %>
		<br />
		<%= f.text_field :first_name, autofocus: true, class: "form-control form-field-width" %>
	</div>

	<div class="form-group">
		<%= f.label :last_name %>
		<br />
		<%= f.text_field :last_name, class: "form-control form-field-width" %>
	</div>

	<div class="form-group">
		<%= f.label :profile_name %>
		<br />
		<%= f.text_field :profile_name, class: "form-control form-field-width" %>
	</div>

	<div class="form-group">
		<%= f.label :email %>
		<br />
		<%= f.email_field :email, class: "form-control form-field-width" %>
	</div>

	<div class="form-group">
		<%= f.label :password %>
		<br />
		<%= f.password_field :password, class: "form-control form-field-width", autocomplete: "off" %>
	</div>

	<div class="form-group">
		<%= f.label :password_confirmation %>
		<br />
		<%= f.password_field :password_confirmation, class: "form-control form-field-width", autocomplete: "off" %>
	</div>

	<div class="form-group">
		<%= f.submit "Sign up", class: "btn btn-default", id: "btn-submit"  %>
	</div>
<% end %>

<% link_to "Sign Out", destroy_user_session_path %>

<%= render "devise/shared/links" %>
