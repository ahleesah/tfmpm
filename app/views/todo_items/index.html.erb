<body class="container-fluid">
	<div class="col-sm-12">
		<h3><%= @todo_list.title %></h3>

		<ul class="todo_items">
			<% @todo_list.todo_items.each do |todo_item| %>
				<% if todo_item.completed == true %>
					<li id="<%= dom_id(todo_item) %>">
						<strike><%= todo_item.content %></strike>
						<br />
						<%= link_to "Mark Complete", complete_todo_list_todo_item_path(todo_item), method: :patch %> |
						<%= link_to "Mark Incomplete", incomplete_todo_list_todo_item_path(todo_item), method: :patch %> |
						<%= link_to "Edit", edit_todo_list_todo_item_path(todo_item) %> |
						<%= link_to "Delete", todo_list_todo_item_path(todo_item), method: :delete,
							 data: { confirm: "Are you sure?" } %>
					</li>
					<hr>
				<% else %>
					<li id="<%= dom_id(todo_item) %>">
						<%= todo_item.content %>
						<br />
						<%= link_to "Mark Complete", complete_todo_list_todo_item_path(todo_item), method: :patch %> |
						<%= link_to "Mark Incomplete", incomplete_todo_list_todo_item_path(todo_item), method: :patch %> |
						<%= link_to "Edit", edit_todo_list_todo_item_path(todo_item) %> |
						<%= link_to "Delete", todo_list_todo_item_path(todo_item), method: :delete,
							 data: { confirm: "Are you sure?" } %>
					</li>
					<hr>
				<% end %>
			<% end %>
		</ul>

		<p>
			<%= link_to "New To Do Item", new_todo_list_todo_item_path %> |
			<%= link_to 'Back', todo_lists_path %>
		</p>
		
	</div>
</body>